toastr['success']('<%= @dropable_type.capitalize %> #<%= @dropable_id %> archived');
setTimeout(function(){
	switch ("<%= @dropable_type %>") {
		case "message":
			$("#<%= @dropable_type %>-<%= @dropable_id %>").replaceWith(`<%= render @dropable, show_options: true %>`);
			break;
		default:
			$("#<%= @dropable_type %>-<%= @dropable_id %>").fadeOut('slow', function() {
				$(this).remove();	
			});
			break;
	}
}, 100);
$.getScript('/assets/application', function(data, textStatus) {
	removeCurrentModals();
	loadAll();
});