<%= form_with(model: @conversation) do |f| %>
<div class="form-group d-flex justify-content-center ">
    <%= f.label :logo, class: "pt-3" do %>
    	<%= image_tag conversation.logo, size: 100, class: "conversation-logo rounded-circle btn p-0" %>
    	<%= f.file_field :logo, class: "d-none" %>
    <% end %>
</div>
<div class="form-group">
    <%= f.text_field :name, placeholder: "", class: "w-100 text-center" %>
</div>
<div class="form-acctions form-group collapse">
    <%= f.submit "Save", :disable_with => 'Saving...' %>
</div>
<% end %>