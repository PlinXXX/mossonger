<div class="dropdown-menu dropdown-menu-left">
    <%= link_to "Settings", settings_path(@chat_setting), remote: true, class: "dropdown-item" %>
    <div class="dropdown-divider"></div>
    <%= link_to "Active Contacts", users_path, remote: true, class: "dropdown-item" %>
    <% if @conversation %>
    <%= link_to "Message Requests", conversation_invitations_path(@conversation), remote: true, class: "dropdown-item" %>
    <% end %>
    <%= link_to "Hidden Chats", dropbox_path(current_user.dropbox), remote: true, class: "dropdown-item" %>
    <% if @filter == "unread" %>
    <%= link_to "All Chats", conversations_path, class: "dropdown-item" %>
    <% else %>
    <%= link_to "Unread Chats", conversations_path(filter: 'unread'), class: "dropdown-item" %>
    <% end %>
    <div class="dropdown-divider"></div>
    <%= link_to "About", about_path, class: "dropdown-item" %>
    <%= link_to "Terms", "#terms", class: "dropdown-item" %>
    <%= link_to "Privacy Policy", "#privacy-policy", class: "dropdown-item" %>
    <%= link_to "Cookie Policy", "#cookie-policy", class: "dropdown-item" %>
    <div class="dropdown-divider"></div>
    <%= link_to "Help", "#help", class: "dropdown-item" %>
    <%= link_to "Report a Problem", "#report-a-problem", class: "dropdown-item" %>
    <div class="dropdown-divider"></div>
    <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
</div>