<div class="tab-content d-sm-block d-md-none">
    <div class="scroll-y tab-pane fade" id="unread" role="tabpanel" aria-labelledby="unread-tab">...</div>
    <div class="tab-pane fade show active" id="friends" role="tabpanel" aria-labelledby="friends-tab">
        <div class="">
            <form action="/search-user" method="get" accept-charset="utf-8">
                <div class="px-3 pt-2 pb-3">
                    <span class="chip w-100">
                        <label for="q" class="chip-icon bg-transparent"><span class="material-icons">search</span></label>
                        <input type="text" id="q" name="q" placeholder="Search" class="border-0 bg-transparent">
                    </span>
                </div>
            </form>
        </div>
            <ul class="list-group scroll-y">
                <%= render @users %>
            </ul>
        <%# react_component("Users", { users: @users }) %>
    </div>
    <div class="scroll-y tab-pane fade" id="settings" role="tabpanel" aria-labelledby="settings-tab">...</div>
</div>