<aside id="message-<%= message.id %>" class="message w-auto my-1">
    <small class="text-muted d-block ml-5">
        <%= message.sender.nickname_at(message.conversation).name %></small>
    <div class="d-flex">
        <%= image_tag url_for(message.sender.avatar), data: {toggle: "tooltip", placement: "bottom"}, title: message.sender.name, class: "btn btn-sm btn-float shadow-none border border-info" %>
        <div data-toggle="tooltip" data-placement="bottom" data-container="body" title="<%= I18n.l(message.created_at, format: :long) %>" class="mx-1">
            <div class="content bg-light p-2 br-25 text-left">
                <%= message.content %>
            </div>
        </div>
        <div class="icons d-sm-none d-md-flex">
            <%= link_to material_icon.insert_emoticon, "#react", data: {toggle: "tooltip", placement: "bottom"}, title: "React", class: "btn btn-sm btn-float shadow-none text-warning" %>
            <%= link_to material_icon.reply, "#reply", data: {toggle: "tooltip", placement: "bottom"}, title: "Reply", class: "btn btn-sm btn-float shadow-none" %>
            <%= link_to material_icon.archive, drop_path('message', message), remote: true, data: {toggle: "tooltip", placement: "bottom"}, title: "Archive", class: "btn btn-sm btn-float shadow-none text-danger" %>
        </div>
    </div>
</aside>